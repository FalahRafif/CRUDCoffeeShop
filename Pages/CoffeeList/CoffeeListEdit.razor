@page "/coffeelist/{Id}"
@inject ICoffeeService _coffeeService
@inject NavigationManager _navigation

<h3>Edit Coffee</h3>

<div class="row">
    <div class="col-sm-12">
        @*////////////////// Card //////////////////*@
        <div class="card">
            <div class="card-body">
                @*////////////////// Form //////////////////*@
                <EditForm Model="_coffee" OnSubmit="SubmitForm">
                    @*html style*@
                    <div class="form-group">
                        <label>Id</label>
                        <input type="text" class="form-control" id="id" name="id" value="@_coffee.Id" disabled />
                    </div>
                    @*razor compent style*@
                    <div class="form-group">
                        <label>Name</label>
                        <InputText class="form-control" id="name" name="name" @bind-Value="_coffee.Name"></InputText>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </EditForm>
                @*////////////////// End Form //////////////////*@
            </div>
        </div>
        @*////////////////// End Card //////////////////*@
    </div>
</div>
@code {
    [Parameter]
    public string Id { get; set; }

    private Coffee _coffee { get; set; }

    protected override void OnInitialized()
    {
        GetData();
    }

    public void GetData()
    {
        try
        {
            _coffee = _coffeeService.GetCoffeeById(Guid.Parse(Id));
        }
        catch (Exception ex)
        {
            throw ex;
        }
    }

    public void SubmitForm()
    {
        try
        {
            _coffeeService.UpdateCoffee(_coffee);
            _navigation.NavigateTo("coffeelist");
        }
        catch (Exception ex)
        {
            throw ex;
        }
    }
}
